<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.example.sxwu_lian_wang.HomeActivity" >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@mipmap/top"
                android:gravity="center">

            <TextView
                    android:id="@+id/timeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="time"
                    android:textSize="20sp"
                    android:textColor="#ffffff"/>

        </LinearLayout>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                <ImageView
                        android:id="@+id/menuHomeImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/menu_homepage"
                        android:layout_weight="1"/>


                <ImageView
                        android:id="@+id/menuEnvirImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/menu_environment"
                        android:layout_weight="1"/>


                <ImageView
                        android:id="@+id/menuRemoteImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/menu_remote"
                        android:layout_weight="1"/>


                <ImageView
                        android:id="@+id/menuSettingImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/menu_setting"
                        android:layout_weight="1"/>

            </LinearLayout>
            <FrameLayout android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:id="@+id/frameLayout">

            </FrameLayout>


        </LinearLayout>



    </LinearLayout>
</RelativeLayout>
